<div class="container-fluid text-center">
  <form class="form-signin" method="post" enctype="application/x-www-form-urlencoded" action="/login" autocomplete="off">
    <h1><i class="fas fa-terminal"></i></h1>
    <h1 class="h3 mb-3 font-weight-normal">Admin Portal Login</h1>
    <label for="inputUsername" class="sr-only">Username</label>
    <input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
    <button class="btn btn-lg btn-dark btn-block" type="submit">Sign in</button>
    <% if(invalidLogin) { %>
      <br>
      <div class="alert alert-danger" role="alert">
          Invalid credentials. Please login using your username and password.
      </div>
    <% } %>
  </form>
</div>

<div class="fixed-bottom text-center">
    <p class="text-muted text-center">Hill & Tovar &copy; 2017-2018</p>  
</div> 


