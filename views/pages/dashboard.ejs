<body>

  <h1 class="text-center">
    Welcome <%=user.firstName%>!
  </h1>

  <h2 class="text-left">
    Global Links
  </h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col" class="text-left">Description</th>
        <th scope="col" class="text-right">Link</th>
      </tr>
    </thead>
    <tbody>
      <% for(let key in globalLinks) { %>
      <tr>
        <td class="text-left"><%=key%></td>
        <td class="text-right"><a href='<%=globalLinks[key]%>'> <%=globalLinks[key]%></a></td>
      </tr>
      <% } %>
    </tbody>
  </table>

  <br>
  <h2 class="text-left">
    <%=user.role%> Links
  </h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col" class="text-left">Description</th>
        <th scope="col" class="text-right">Link</th>
      </tr>
    </thead>
    <tbody>
      <% for(let key in groupLinks) { %>
      <tr>
        <td class="text-left"><%=key%></td>
        <td class="text-right"><a href='<%=groupLinks[key]%>'> <%=groupLinks[key]%></a></td>
      </tr>
      <% } %>
    </tbody>
  </table>

  <div class="col-12 text-center">
    <a href="/logout"><button class="btn btn-danger btn-lg">Logout</button></a>
  </div>

</body>