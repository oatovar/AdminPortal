<body>
    <div class="container-fluid">
      <div class="column">
          <div class="col-12 text-center">
            <h1>
              Welcome <%=user.firstName%>!
            </h1>
          </div>

          <div class="container-fluid">
              <div class="row">
                  <h2>Global Links</h2>
                  <div class="table-responsive">
                    <table class="table table-striped table-sm">
                      <thead>
                        <tr>
                          <th>Description</th>
                          <th>Link</th>
                        </tr>
                      </thead>
                      <tbody>
                          <% for(let key in globalLinks) { %>
                            <tr>
                              <td><%=key%></td>
                              <td >
                                <a href='<%=globalLinks[key]%>'> <%=globalLinks[key]%></a>
                              </td>
                            </tr>
                          <% } %>
                        </tbody>
                    </table>
                  </div>
                </main>
              </div>
            </div>

          <div class="container-fluid">
              <div class="row">
                  <h2>Links for <%=user.role%></h2>
                  <div class="table-responsive">
                    <table class="table table-striped table-sm">
                      <thead>
                        <tr>
                          <th>Description</th>
                          <th>Link</th>
                        </tr>
                      </thead>
                      <tbody>
                          <% for(let key in groupLinks) { %>
                            <tr>
                              <td><%=key%></td>
                              <td>
                                <a href='<%=groupLinks[key]%>'> <%=groupLinks[key]%></a>
                              </td>
                            </tr>
                          <% } %>
                        </tbody>
                    </table>
                  </div>
                </main>
              </div>
            </div>

            <br>
            <div class="col-12 text-center">
              <a href="/logout"><button class="btn btn-danger btn-lg">Logout</button></a>
            </div>
      </div>
    </div>